<link rel="stylesheet" type="text/css" href="stylesheets/signup.scss">

<div class="signup_whole">
<main class="signup_main">
  <h3>新規登録</h3>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <span class="signup_name">
      <p><%= f.label :"名前:" %></p>&emsp;
      <%= f.text_field :user_name, autofocus: true, :id => "name_field" %>
    </span>

    <span class="signup_email">
      <p><%= f.label :"メールアドレス:" %></p>&emsp;
      <%= f.email_field :email, autofocus: true, autocomplete: "email", :id => "email_field" %>
    </span>

    <span class="signup_password">
      <p><%= f.label :"パスワード" %>
      <% if @minimum_password_length %>
        (<%= @minimum_password_length %> 文字以上):
      <% end %></p>&emsp;
      <%= f.password_field :password, autocomplete: "new-password", :id => "password_field" %>
    </span>

    <span class="signup_againpass">
      <p><%= f.label :"パスワード_(確認):" %></p>&emsp;
      <%= f.password_field :password_confirmation, autocomplete: "new-password", :id => "password_field" %>
    </span>

    <span class="signup_action">
      <button type="button" onclick="submit();" id="action_button">新規登録</button>
    </span>
  <% end %>
</main>

<nav class="signup_link">
  <ul>
    <li><%= link_to "トップページに戻る", top_items_path %></li>
  </ul>
</nav>
</div>