<link rel="stylesheet" type="text/css" href="stylesheets/signup.scss">

<div class="link">
  <%= link_to "トップページに戻る", top_items_path %>
</div>

<div class="signup">
  <h3>新規登録</h3>

  <div class="user_new">
   <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="user_new_name">
      <%= f.label :"名前:" %>&ensp;
      <%= f.text_field :user_name, autofocus: true, :id => "name_field" %>
    </div>

    <div class="user_new_email">
      <%= f.label :"メールアドレス:" %>&ensp;
      <%= f.email_field :email, autofocus: true, autocomplete: "email", :id => "email_field" %>
    </div>

    <div class="user_new_password">
      <%= f.label :"パスワード" %>&ensp;
      <% if @minimum_password_length %>
        (<%= @minimum_password_length %> 文字以上):&ensp;
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", :id => "password_field" %>
    </div>

    <div class="user_new_conpass">
      <%= f.label :"パスワード_(確認):" %>&ensp;
      <%= f.password_field :password_confirmation, autocomplete: "new-password", :id => "password_field" %>
    </div>

    <div class="user_new_action">
      <button type="button" onclick="submit();" id="action_button">新規登録</button>
    </div>
   <% end %>
  </div>
</div>