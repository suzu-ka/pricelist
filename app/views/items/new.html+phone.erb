<link rel="stylesheet" type="text/css" href="stylesheets/sp_new.scss">

<div class="sp_new_link">
  <%= link_to "トップページ", :controller => "items", :action => "top" %>
  <%= link_to "投稿一覧", items_path %>
</div>

<div class="sp_new">
 <h3>新規投稿</h3>

 <div class="sp_new_items">
  <%= form_for @item do |f| %>
  <div class="sp_new_name">
    <%= f.label :"商品名:" %>&ensp;
    <%= f.text_field :name, :maxlength => "15", placeholder: " (15字以内)" %>
  </div>
  <div class="sp_new_about">
    <%= f.label :"内容:" %>&ensp;
    <%= f.text_area :about %>
  </div>
  <div class="sp_new_price">
    <%= f.label :"値段:" %>&ensp;
    <%= f.text_field :price %>円
  </div>

  <div class="sp_new_image">
    <%= f.label :"画像:" %>&ensp;
    <label id="sp_image_file">ファイルを選択する<%= f.file_field :image %></label>
  </div><br>

  <div class="sp_new_category">
    <%= f.label :"カテゴリー:" %>&ensp;
    <%= f.select :category, [["Food", "food"], ["Life", "life"], ["Fashion", "fashion"], ["Toy", "toy"], ["Character", "character"], ["Others", "others"]], include_blank: "カテゴリーの選択" %>
  </div><br>
  
  <div class="sp_new_action">
    <button type="button" onclick="submit();" id="sp_new_button">投稿する</button>
  </div>
  <% end %>
  </div>
</div>