<link rel="stylesheet" type="text/css" href="stylesheets/sp_edit.scss">

<div class="sp_link">
  <% if user_signed_in? %>
    <%= link_to "マイページ", user_path(current_user.id) %>
  <% end %>&ensp;
  <%= link_to "投稿一覧", items_path %>
</div>

<div class="sp_edit">
  <h3>投稿を編集する</h3>

  <div class="sp_edit_items">
    <%= form_for @item do |f| %>
      <div class="sp_edit_field">
        <div class="sp_edit_name">
          <%= f.label :"商品名:" %>&ensp;
          <%= f.text_field :name, :maxlength => "15", placeholder: " (15字以内)" %>
        </div>

        <div class="sp_edit_about">
          <%= f.label :"内容:" %>&ensp;
          <%= f.text_area :about %>
        </div>

        <div class="sp_edit_price">
          <%= f.label :"値段:" %>&ensp;
          <%= f.text_field :price, :size => 10 %>円
        </div>
      </div><br>

      <div class="sp_edit_image">
        <%= f.label :"画像:" %>&ensp;
        <label id="sp_image_file">ファイルを選択する<%= f.file_field :image %></label>
      </div><br>

      <div class="sp_edit_category">
        <%= f.label :"カテゴリー:" %>&ensp;
        <%= f.select :category, [["Food", "food"], ["Life", "life"], ["Fashion", "fashion"], ["Toy", "toy"], ["Character", "character"], ["Others", "others"]], include_blank: "カテゴリーの選択" %>
      </div><br>

      <div class="sp_edit_action">
        <button type="button" onclick="submit();" id="sp_edit_button">編集する</button>
      </div>
    <% end %>
  </div>
</div>